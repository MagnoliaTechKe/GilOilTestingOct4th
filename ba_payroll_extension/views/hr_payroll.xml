        <!-- Inherit the existing payslip form -->
        <record id="hr_payslip_form_inherit_overtime" model="ir.ui.view">
            <field name="name">hr.payslip.form.overtime</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='account_info']" position="inside">
                    <group string="Overtime Calculation" invisible="1">
                        <field name="overtime_hours_weekdays"/>
                        <field name="overtime_hours_sunday_holiday"/>
                        <field name="overtime_amount_weekdays"/>
                        <field name="overtime_amount_sunday_holiday"/>
                    </group>
                </xpath>
            </field>
        </record>
