<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_monthly_bank_report_wizard" model="ir.ui.view">
        <field name="name">monthly.bank.report.wizard.form</field>
        <field name="model">monthly.bank.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Monthly Bank Report">
                <group>
                    <field name="start_date" />
                    <field name="end_date" />
                </group>
                <footer>
                    <button string="Generate Report" type="object" name="generate_bank_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="download_monthly_bank_report" model="ir.ui.view">
            <field name="name">Download Monthly Bank Report</field>
            <field name="model">download.monthly.bank.report</field>
            <field name="arch" type="xml">
                <form string="Download">
                    <group>
                        <field name="name" invisible="1"/>
                        <h5>Download File: &#160;<field name="exported_csv_file" filename="name" nolabel="1"/></h5>
                    </group>
                    <separator string="" colspan="4"/>
                    <footer>
                        <button class="btn-primary" special="cancel" string="Close" colspan="2"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>
